{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1 class="text-center">Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Brand</th>
                <td>{{ car.brandId.name }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Vin</th>
                <td>{{ car.vin }}</td>
            </tr>
            <tr>
                <th>Registration number</th>
                <td>{{ car.registrationNumber }}</td>
            </tr>
            <tr>
                <th>Rented</th>
                <td>{{ car.isRented() ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ car.getAddress() }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}" class="btn btn-secondary">Back to list</a>

    <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
